            <div class="col-lg-4">
              <form method="POST" action="/api/course/addtocart">
                <input name="id" value="<%= course._id %>" hidden />
                <input name="variant" id="courseOption" value="0" hidden />
              <div class="btn-group-vertical course-pricing w-100 btn-group-toggle" data-toggle="buttons">
                <% course.variants.map((variant, index) => { %>
                <label onclick="addOption(`<%= index %>`)" class="btn py-5 mb-6 px-8 d-flex align-items-center justify-content-between active">
                  <% if(index === 0){ %>
                    <input type="radio" autocomplete="off" checked>
                  <% } else { %>
                    <input type="radio" autocomplete="off">
                  <% } %>
                  <div class="text-left">
                    <span class="gr-text-8 font-weight-bold"><%= variant.name %></span><br/>
                    <span class="gr-text-10 gr-opacity-8"><%= variant.description %></span> 
                  </div>
                  <div class="font-weight-bolder text-right">
                    <span class="gr-text-6 text-green">₹<%= variant.discountPrice %></span><br />
                    <span class="gr-text-9 text-linethrough">₹<%= variant.price %></span> 
                  </div>
                </label>
                <% }) %>
              </div>

              <div class="pt-6">
                <span class="gr-text-8 font-weight-bold">Add Ons</span>
                <% course.addons.map(addon => { %>
                <div class="d-flex justify-content-between py-4">
                  <div class="d-flex">
                      <input class="m-4" name="<%= addon.name %>" type="checkbox">
                      <div>
                        <div class="gr-text-9 font-weight-bold"><%= addon.name %> <span class="gr-text-8 text-green">₹<%= addon.price %>/-</span></div> 
                        <div class="gr-text-11"><%= addon.description %></div>
                      </div>
                  </div>
                  <div class="p-4">
                    <img height="64px" src="<%= addon.img %>" alt="">
                  </div>
                </div>
                <% }) %>
              </div>

              <div class="d-flex justify-content-center flex-column my-6">
                <button type="submit" class="btn btn-secondary text-white my-2 rounded-8 gr-min-width-219 w-100"><i class="fa fa-shopping-cart gr-text-9 mr-2"></i> Add to Cart</button>
              </div>
            </form>
              <div class="py-3 mt-8 rounded-10">
                <div class="price-content light-mode-texts">
                  <ul class="mx-3 pl-0 my-3 mx-auto">
                    <li class="text-black gr-text-9 d-flex justify-content-between mb-0 py-7 border-top d-block">
